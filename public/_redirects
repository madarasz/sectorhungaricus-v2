# Netlify redirects for production static export
# Exclude admin paths from locale redirects to preserve CMS functionality

# Don't redirect admin paths (CMS)
/admin/*  /admin/:splat  200

# Don't redirect paths that already have locale
/hu/*     /hu/:splat     200
/en/*     /en/:splat     200

# Don't redirect static assets and API routes
/_next/*  /_next/:splat  200
/api/*    /api/:splat    200
/uploads/* /uploads/:splat 200
/favicon.ico /favicon.ico 200

# Redirect root to Hungarian locale
/         /hu/           302

# Redirect any other path without locale to Hungarian locale
/*        /hu/:splat     302